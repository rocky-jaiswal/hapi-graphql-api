{
  "name": "hapi-graphql-api",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Rocky Jaiswal",
  "license": "MIT",
  "private": false,
  "scripts": {
    "serve": "node dist/server.js",
    "watch-ts": "tsc -w",
    "watch-node": "npx nodemon dist/server.js",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Nodemon\" -c \"yellow.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\""
  },
  "devDependencies": {
    "@types/graphql": "^14.2.0",
    "@types/hapi": "^18.0.2",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/knex": "^0.16.1",
    "@types/sqlite3": "^3.1.5",
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.11",
    "standard": "^12.0.1",
    "tslint": "^5.16.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.4.5"
  },
  "standard": {
    "parser": "typescript-eslint-parser",
    "plugins": [
      "typescript"
    ]
  },
  "dependencies": {
    "apollo-server": "^2.4.8",
    "apollo-server-hapi": "^2.4.8",
    "graphql": "^14.2.1",
    "hapi": "^18.1.0",
    "hapi-auth-jwt2": "^8.4.0",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.16.5",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^4.0.6",
    "type-graphql": "^0.17.3"
  }
}
